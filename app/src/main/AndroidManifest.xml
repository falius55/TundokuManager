<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="jp.gr.java_conf.falius.tundokumanager.app">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="jp.gr.java_conf.falius.tundokumanager.app.ApplicationManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name="jp.gr.java_conf.falius.tundokumanager.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="jp.gr.java_conf.falius.tundokumanager.app.input.InputActivity"
            android:label="TundokuManager"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="jp.gr.java_conf.falius.tundokumanager.app.pref.PrefActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="jp.gr.java_conf.falius.tundokumanager.app.tree.filetree.FileTreeListActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="jp.gr.java_conf.falius.tundokumanager.app.log.LogActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>